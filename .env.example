OPENAI_API_KEY=sk-...
OPENAI_MODEL_SEO=gpt-4o-mini
OPENAI_MODEL_SCRIPT=gpt-4o-mini

# Google Cloud TTS
# Point to your service account JSON path
GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/gcp-service-account.json
# TTS Voice options: en-US-Neural2-A (male), en-US-Neural2-C (female), en-US-Neural2-D (male deep), en-US-Neural2-F (female warm)
TTS_VOICE_NAME=en-US-Neural2-C
TTS_SPEAKING_RATE=1.03

# Stock Footage (optional, free API from pexels.com)
PEXELS_API_KEY=

# Shotstack
SHOTSTACK_API_KEY=...
# stage or production
SHOTSTACK_ENV=stage

# Google Drive folders (created if missing)
DRIVE_AUDIO_FOLDER=/autopilot/audio/
DRIVE_RENDERS_FOLDER=/autopilot/renders/

# YouTube OAuth
# Place client_secrets.json at repo root (from Google Cloud Console)
YOUTUBE_PRIVACY_STATUS=unlisted
MSS_BRAND=Many Sources Say
DISABLE_YT_UPLOAD=

# Advanced Features
ENABLE_STOCK_FOOTAGE=false
ENABLE_SSML=true
THUMBNAIL_VARIANTS=3
